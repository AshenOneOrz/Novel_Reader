{
    "name": "novelReader",
    "displayName": "novelReader",
    "description": "TXT格式小说阅读器",
    "version": "1.0.2",
    "publisher": "Zelda",
    "repository": "https://github.com/AshenOneOrz/Read_Novel",
    "engines": {
        "vscode": "^1.44.2"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:novelReader.open"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "novelReader.open",
                "title": "novelReader_open",
                "description": "运行"
            },
            {
                "command": "novelReader.nextPage",
                "title": "novelReader_nextPage",
                "description": "下一页"
            },
            {
                "command": "novelReader.prevPage",
                "title": "novelReader_prevPage",
                "description": "上一页"
            },
            {
                "command": "novelReader.clear",
                "title": "novelReader_clear",
                "description": "清空"
            }
        ],
        "keybindings": [
            {
                "command": "novelReader.nextPage",
                "key": "alt+w",
                "mac": "cmd+w",
                "linux": "meta+w",
                "when": "editorTextFocus"
            },
            {
                "command": "novelReader.prevPage",
                "key": "alt+q",
                "mac": "cmd+q",
                "linux": "meta+q",
                "when": "editorTextFocus"
            },
            {
                "command": "novelReader.clear",
                "key": "alt+e",
                "mac": "cmd+e",
                "linux": "meta+e",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "novelReader",
            "type": "object",
            "properties": {
                "novelReader.filePath": {
                    "type": "string",
                    "default": "",
                    "description": "文件的绝对路径（D:/Josh/xcuo/abc.txt）"
                },
                "novelReader.annotationRule": {
                    "type": "string",
                    "default": "/* $ */",
                    "description": "注释规则（/* content */）"
                },
                "novelReader.startingPosition": {
                    "type": "number",
                    "default": 0,
                    "description": "起始位置（行，从 0 开始）"
                },
                "novelReader.step": {
                    "type": "number",
                    "default": 1,
                    "description": "一次看几行"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.44.2",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "glob": "^7.1.7",
        "mocha": "^9.1.1",
        "typescript": "^4.4.3",
        "@vscode/test-electron": "^1.6.2"
    }
}
